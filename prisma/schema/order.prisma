model Order {
    order_id            String      @id @default(uuid())
    customer_ssn        String
    created_at          DateTime
    shipping_address    String
    shipping_city       String
    shipping_postalcode String
    processed           Boolean     @default(false)
    //
    order_items         OrderItem[]
    customer            Customer    @relation(fields: [customer_ssn], references: [ssn], onDelete: Cascade, onUpdate: Cascade)
}

model OrderItem {
    id         Int     @id @default(autoincrement())
    order_id   String
    product_id String
    price      Int
    size       String
    //
    Order      Order   @relation(fields: [order_id], references: [order_id], onDelete: Cascade, onUpdate: Cascade)
    Product    Product @relation(fields: [product_id], references: [product_id], onDelete: Cascade, onUpdate: Cascade)
}
